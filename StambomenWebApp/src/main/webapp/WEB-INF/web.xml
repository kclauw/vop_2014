<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>TreeServlet</servlet-name>
        <servlet-class>servlet.TreeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>XController</servlet-name>
        <servlet-class>Controller.XController</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet> 
    <servlet>
        <servlet-name>FriendServlet</servlet-name>
        <servlet-class>servlet.FriendServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TreeServlet</servlet-name>
        <url-pattern>/servlet/TreeServlet</url-pattern>
    </servlet-mapping>
   
    <servlet-mapping>
        <servlet-name>FriendServlet</servlet-name>
        <url-pattern>/servlet/FriendServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/servlet/LoginServlet</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>XController</servlet-name>
        <url-pattern>/servlet/*</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>